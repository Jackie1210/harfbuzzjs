{
  "compileOnSave": true,
  "compilerOptions": {
    "module": "ES6",
    "target": "ES6",
    "sourceMap": true,
    "alwaysStrict": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "strictNullChecks": true,
    "moduleResolution": "NodeNext",
    "skipLibCheck": true,
    "strictPropertyInitialization": true,
    "paths": {
      "~/*": ["./src/*"]
    }
  },
  "include": ["./src/**/*.ts", "vitest.config.ts"],
  "exclude": [
    "node_modules"
  ]
}